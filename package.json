{
    "name": "algo-vault-scripts",
    "version": "1.0.0",
    "description": "Build scripts for Algo-Vault",
    "main": "generate_index.js",
    "scripts": {
        "generate": "node scripts/generate_index.js",
        "format": "prettier --write \"dsa/*.{java,txt}\"",
        "build:css": "npx tailwindcss -i ./assets/input.css -o ./assets/styles.css",
        "build": "npm run format && npm run generate && npm run build:css"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.23",
        "postcss": "^8.5.6",
        "prettier": "^3.1.0",
        "prettier-plugin-java": "^2.8.1",
        "tailwindcss": "^4.1.18"
    }
}
